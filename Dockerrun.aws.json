{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "ui-app",
            "image": "tcscheurer/multi-client",
            "hostname": "client",
            "essential": false
        }, 
        {
            "name": "server",
            "image": "tcscheurer/multi-server",
            "hostname": "api",
            "essential": false
        }, 
        {
            "name": "worker",
            "image": "tcscheurer/multi-worker",
            "hostname": "worker",
            "essential": false
        }, 
        {
            "name": "nginx",
            "image": "tcscheurer/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["ui-app","server"]
        }
    ]
}